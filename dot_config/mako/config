[category=power.online]
on-notify=exec mpv /usr/share/sounds/freedesktop/stereo/power-plug.oga --volume=500

[category=power.offline]
on-notify=exec mpv /usr/share/sounds/freedesktop/stereo/power-unplug.oga --volume=500

