# Start apps & things
# install sddm login manager
exec_always systemctl enable ly.service
# install mako
exec_always mako
# install caffeine-ng
exec_always caffeine
# networkmanager
exec_always nm-applet
# install autotiling
exec_always autotiling

# clipboard manager
# install copyq
exec_always copyq

# monitor battery power
# install auto-cpufreq
exec_always systemctl enable --now auto-cpufreq

# monitor temperature of cpu
exec_always systemctl start thermald.service

# launch wlsunset
# install wlsunset
exec_always wlsunset -l 33.4 -L -7.4 -t 3000




