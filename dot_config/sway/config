# Start apps & things
exec systemctl enable ly.service
exec wlsunset -l 33.5 -L -7.5 -t 3000 -T 5500 -S 06:30 -s 18:30
exec dunst
exec caffeine-ng
exec nm-applet
# set sway-wm as XDG_CURRENT_DESKTOP to be recognized
exec dbus-update-activation-environment --systemd WAYLAND_DISPLAY DISPLAY SWAYSOCK XDG_CURRENT_DESKTOP=sway XDG_SESSION_DESKTOP=sway

# inputs 
#keyboard layout
input * {
    xkb_layout "fr"
  }

# touchpad settings
input type:touchpad {
    tap enabled
    natural_scroll enabled
  }





