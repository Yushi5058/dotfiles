# If you come from bash you might have to change your $PATH.
 export PATH=$HOME/bin:/usr/local/bin:$PATH


# make nvim the default editor : 
 export EDITOR=nvim


# detect chezmoi
 export CHEZMOI=$HOME/bin/chezmoi



# Created by Zap installer
[ -f "${XDG_DATA_HOME:-$HOME/.local/share}/zap/zap.zsh" ] && source "${XDG_DATA_HOME:-$HOME/.local/share}/zap/zap.zsh"
plug "zsh-users/zsh-autosuggestions"
plug "zap-zsh/supercharge"
plug "zap-zsh/zap-prompt"
plug "zsh-users/zsh-syntax-highlighting"
plug "z-shell/F-Sy-H"


# Load and initialise completion system
autoload -Uz compinit
compinit


# Custom ys-style prompt
ys_prompt() {
  local user_prompt="%n" # username
  local host_prompt="%m" # hostname
  local dir_prompt="%2~" # current directory, shortened to 2 segments
  local git_prompt="%F{yellow}%$(git_prompt_info)%f" # Git prompt
  local prompt_char="%F{cyan}%B‚ùØ%b%f " # prompt character

  PROMPT="${user_prompt}@${host_prompt}:${dir_prompt}${git_prompt}${prompt_char}"
}

# Set the prompt
ys_prompt


# aliases
alias c="clear"
alias cat="bat"
alias htop="btop"
alias vim="nvim"
alias home="cd"
alias update="sudo dnf update -y"
alias fupdate="flatpak update -y"
alias gc="git commit -m"
alias gs="git status"
alias gp="git push origin main"
alias ga="git add"

eval "$(starship init zsh)"


