{
    "layer": "top",
    "position": "top",
    "margin-top": 5,
    "margin-bottom": 0,
    "spacing": 0, // Keep spacing 0, we handle it in CSS
    "modules-left": [
        "sway/workspaces"
    ],
    "modules-right": [
        "tray",
        "network",
        "bluetooth",
        "group/hardware", // <--- The new Group
        "disk",
        "pulseaudio",
        "backlight",
        "battery",
        "clock"
    ],
    // --- MODULES ---
    "sway/workspaces": {
        "disable-scroll": true,
        "format": "{name}"
    },
    // NEW: Group configuration
    "group/hardware": {
        "orientation": "horizontal",
        "modules": [
            "cpu",
            "memory"
        ]
    },
    // NEW: CPU Module
    "cpu": {
        "interval": 5,
        "format": " {usage}%",
        "tooltip": true
    },
    // UPDATED: Compact Memory (Removed "/ Total" to save space)
    "memory": {
        "interval": 10,
        "format": " {percentage}%",
        "tooltip-format": "Used: {used:0.1f}G\nTotal: {total:0.1f}G"
    },
    "disk": {
        "interval": 30,
        "path": "/",
        "format": " {percentage_used}%", // Compact format
        "tooltip-format": "{path} — {used} used of {total}"
    },
    "network": {
        // Icon only to save space. Hover for name.
        "format-wifi": "",
        "format-ethernet": "󰈀",
        "format-disconnected": "󰤮",
        "tooltip-format": "{ifname}: {ipaddr}",
        "tooltip-format-wifi": "{essid} ({signalStrength}%)",
        "interval": 5
    },
    "bluetooth": {
        "format": "",
        "format-connected": "", // Icon only on bar
        // Tooltip will list devices using the "enumerate" format below
        "tooltip-format-connected": "Connected ({num_connections}):\n{device_enumerate}",
        "tooltip-format-enumerate-connected": " {device_alias}",
        "tooltip-format-enumerate-connected-battery": " {device_alias} ({device_battery_percentage}%)",
        "on-click": "blueman-manager"
    },
    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-muted": "",
        "format-icons": {
            "default": [
                "",
                "",
                ""
            ]
        },
        "on-click": "pavucontrol"
    },
    "backlight": {
        "format": "{icon} {percent}%", // Icon + Number
        "format-icons": [
            "󰃞",
            "󰃟",
            "󰃠"
        ],
        "tooltip": false
    },
    "battery": {
        "interval": 5,
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-charging": " {capacity}%",
        "format-icons": [
            "",
            "",
            "",
            "",
            ""
        ]
    },
    "clock": {
        "interval": 1,
        "format": "󰥔 {:%H:%M}", // Seconds removed to save space
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
            "mode": "month",
            "mode-mon-col": 3,
            "weeks-pos": "right",
            "on-scroll": 1,
            "format": {
                "months": "<span color='#ffead3'><b>{}</b></span>",
                "days": "<span color='#ecc6d9'><b>{}</b></span>",
                "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
                "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
                "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
            }
        }
    },
    "tray": {
        "icon-size": 15,
        "spacing": 8
    }
}
